{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@": ["app/*"],
      "@components/*": ["app/components/*"],
      "@shared/*": ["app/shared/*"],
      "@screens": ["app/screens/*"],
      "@utils/*": ["app/shared/utils/*"],
      "@hooks/*": ["app/shared/hooks/*"],
      "@services/*": ["app/shared/services/*"]
    }
  }
}
